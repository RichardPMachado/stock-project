generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:root@db:3306/stock"
}


model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  name      String?
  role      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

